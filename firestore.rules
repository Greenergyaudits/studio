
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth.token.email == 'atif.adeel.1981@gmail.com';
    }

    // Get user's subscription data from their own user document
    function getUserSubscriptionId(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.subscriptionId;
    }

    // Get subscription details
    function getSubscriptionDetails(subscriptionId) {
      return get(/databases/$(database)/documents/subscriptions/$(subscriptionId)).data;
    }

    match /users/{userId} {
      // Allow a user to be created.
      allow create: if isSignedIn() && request.auth.uid == userId;
      // Allow a user to read their own document for profile info.
      allow read, update: if isOwner(userId);
      // Allow other rules to GET this document to check permissions.
      allow get: if isSignedIn();
    }

    match /users/{userId}/medicines/{medicineId} {
      allow read, delete: if isOwner(userId);
      // Allow write if user is owner AND (is admin OR is premium OR has not reached basic medicine limit)
      allow write: if isOwner(userId) && 
                      (isAdmin() || getSubscriptionDetails(getUserSubscriptionId(userId)).subscriptionType == 'Premium' || 
                      list(/databases/$(database)/documents/users/$(userId)/medicines,).size() < getSubscriptionDetails(getUserSubscriptionId(userId)).maxMedicines);
    }

    match /users/{userId}/bloodPressureReadings/{readingId} {
        // Allow access if the user is the owner AND (is admin OR has the blood pressure feature enabled)
        allow read, write, delete: if isOwner(userId) && (isAdmin() || getSubscriptionDetails(getUserSubscriptionId(userId)).bloodPressureManager == true);
    }

    match /users/{userId}/diabeticReadings/{readingId} {
        // Allow access if the user is the owner AND (is admin OR has the diabetic manager feature enabled)
        allow read, write, delete: if isOwner(userId) && (isAdmin() || getSubscriptionDetails(getUserSubscriptionId(userId)).diabeticManager == true);
    }

    match /subscriptions/{subscriptionId} {
      // Allow a user to read a subscription document if its ID matches the one in their own user document.
      allow read: if isSignedIn() && subscriptionId == getUserSubscriptionId(request.auth.uid);
      // Only backend should create/update subscriptions. This is correct.
      allow write: if false; 
    }
  }
}
