{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Medication Minder application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "subscriptionId": {
          "type": "string",
          "description": "Reference to Subscription. (Relationship: User 1:1 Subscription)"
        }
      },
      "required": [
        "id",
        "email",
        "subscriptionId"
      ]
    },
    "Subscription": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Subscription",
      "type": "object",
      "description": "Represents a user's subscription level and associated features.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the subscription entity."
        },
        "subscriptionType": {
          "type": "string",
          "enum": ["Basic", "Premium"],
          "description": "Type of subscription."
        },
        "maxMedicines": {
          "type": "number",
          "description": "Maximum number of medicines allowed for this subscription type."
        },
        "bloodPressureManager": {
          "type": "boolean",
          "description": "Indicates if blood pressure management feature is enabled for this subscription."
        },
        "diabeticManager": {
          "type": "boolean",
          "description": "Indicates if diabetic management feature is enabled for this subscription."
        }
      },
      "required": [
        "id",
        "subscriptionType",
        "maxMedicines",
        "bloodPressureManager",
        "diabeticManager"
      ]
    },
    "Medicine": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Medicine",
      "type": "object",
      "description": "Represents a medication that a user takes.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the medicine entity."
        },
        "name": {
          "type": "string",
          "description": "Name of the medication."
        },
        "quantity": {
          "type": "number",
          "description": "Current quantity of the medication."
        },
        "dose_times": {
          "type": "array",
          "description": "Array of dose times for the medication (in HH:MM format).",
          "items": {
            "type": "string"
          }
        },
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N Medicine)"
        },
        "active": {
          "type": "boolean"
        },
        "instructions": {
          "type": "string"
        },
        "course": {
          "type": "object",
          "properties": {
            "durationDays": {
              "type": "number"
            },
            "startDate": {
              "type": "string",
              "format": "date-time"
            }
          }
        },
        "expiryDate": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "quantity",
        "dose_times",
        "userId"
      ]
    },
     "BloodPressure": {
      "title": "BloodPressure",
      "type": "object",
      "description": "Represents a single blood pressure reading for a user.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "systolic": { "type": "number" },
        "diastolic": { "type": "number" },
        "pulse": { "type": "number" },
        "timestamp": { "type": "string", "format": "date-time" },
        "arm": { "type": "string", "enum": ["left", "right"] },
        "position": { "type": "string", "enum": ["sitting", "laying", "standing"] },
        "conditions": {
          "type": "object",
          "properties": {
            "meal": { "type": "string", "enum": ["before", "after"] },
            "medicine": { "type": "string", "enum": ["before", "after"] },
            "activity": { "type": "string", "enum": ["before", "after"] }
          }
        }
      },
      "required": ["id", "userId", "systolic", "diastolic", "pulse", "timestamp"]
    },
    "Diabetic": {
      "title": "Diabetic",
      "type": "object",
      "description": "Represents a single diabetic reading for a user.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "glucoseLevel": { "type": "number" },
        "readingType": { "type": "string", "enum": ["fasting", "post-meal", "random"] },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "userId", "glucoseLevel", "readingType", "timestamp"]
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores user profiles. Includes 'subscriptionId' to link to subscription details.",
          "params": [
            {
              "name": "userId",
              "description": "The unique identifier for the user."
            }
          ]
        }
      },
      {
        "path": "/subscriptions/{subscriptionId}",
        "definition": {
          "entityName": "Subscription",
          "schema": {
            "$ref": "#/backend/entities/Subscription"
          },
          "description": "Stores subscription details, including subscription type and feature flags.",
          "params": [
            {
              "name": "subscriptionId",
              "description": "The unique identifier for the subscription."
            }
          ]
        }
      },
      {
        "path": "/users/{userId}/medicines/{medicineId}",
        "definition": {
          "entityName": "Medicine",
          "schema": {
            "$ref": "#/backend/entities/Medicine"
          },
          "description": "Stores medicine details for each user.",
          "params": [
            {
              "name": "userId",
              "description": "The unique identifier for the user."
            },
            {
              "name": "medicineId",
              "description": "The unique identifier for the medicine."
            }
          ]
        }
      },
       {
        "path": "/users/{userId}/bloodPressureReadings/{readingId}",
        "definition": {
          "schema": { "$ref": "#/backend/entities/BloodPressure" },
          "description": "Blood pressure readings for a user."
        }
      },
      {
        "path": "/users/{userId}/diabeticReadings/{readingId}",
        "definition": {
          "schema": { "$ref": "#/backend/entities/Diabetic" },
          "description": "Diabetic readings for a user."
        }
      }
    ]
  }
}
    